<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.dkp1903.helpinghands">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name = "android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/helpinghands"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".MainActivity" /> -->

        <activity
            android:id="@+id/LoginIntern"
            android:name=".InternLogin"
            android:label="Intern Login" />
        <activity
            android:id="@+id/AboutUs"
            android:name=".AboutUs"
            android:label="About Us" />
        <activity
            android:name=".TaskListActivity"
            android:label="Task List" />
        <activity android:name=".Careers"
            android:label = "Careers"></activity>
    </application>

</manifest>